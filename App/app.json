{
  "expo": {
    "name": "app-restaurant",
    "slug": "app-restaurant",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icono.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icono-adaptable.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icono-adaptable.png"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "La aplicación necesita acceso a la cámara para tomar fotos y escanear documentos."
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "La aplicación necesita acceso a la cámara para escanear códigos de barras del DNI."
        }
      ]
    ]
  }
}
